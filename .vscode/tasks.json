// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run script",
      "type": "process",
      "command": "ts-node",
      "args": ["scripts/${input:command}.ts", "--", "${input:commandArgs}"],
      "problemMatcher": ["$tsc"]
    }
  ],
  "inputs": [
    {
      "id": "command",
      "type": "pickString",
      "description": "The command to run",
      "options": ["new-feature"]
    },
    {
      "id": "commandArgs",
      "type": "promptString",
      "description": "The arguments to pass to the command"
    }
  ]
}
